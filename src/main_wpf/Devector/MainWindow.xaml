<Window x:Class="Devector.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Devector"
        mc:Ignorable="d"
        Title="Devector" Height="664" Width="680"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        ui:WindowHelper.UseModernWindowStyle="True"
        MouseRightButtonDown="Viewport_ContextMenuOpen">
    <DockPanel>
        <!-- Main Menu -->
        <Menu Name="menuBar" DockPanel.Dock="Top">
            <MenuItem Header="_File">
                <MenuItem Header="_Open" Click="OpenMenuItem_Click"/>
                <MenuItem Header="_Recent Files">
                    <MenuItem.ItemsSource>
                        <Binding Source="{x:Static Application.Current}" Path="RecentFilePaths" />
                    </MenuItem.ItemsSource>
                    <MenuItem.ItemTemplate>
                        <DataTemplate>
                            <MenuItem Header="{Binding Path}" Command="{Binding DataContext.OpenRecentFileCommand, RelativeSource={RelativeSource AncestorType=Window}}" CommandParameter="{Binding}" />
                        </DataTemplate>
                    </MenuItem.ItemTemplate>
                </MenuItem>
                <MenuItem Header="_SaveRec" Click="SaveRecMenuItem_Click"/>
                <Separator/>
                <MenuItem Header="E_xit" Click="ExitMenuItem_Click"/>
            </MenuItem>
            <MenuItem Header="_Tools">
                <MenuItem Header="HardwareStats" Click="ToolOpenMenuItem_Click"/>
                <MenuItem Header="Disasm" Click="ToolOpenMenuItem_Click"/>
                <MenuItem Header="Breakpoints" Click="ToolOpenMenuItem_Click"/>
                <MenuItem Header="Watchpoints" Click="ToolOpenMenuItem_Click"/>
            </MenuItem>
            <MenuItem Header="_Help">
                <MenuItem Header="_About" Click="AboutMenuItem_Click"/>
            </MenuItem>
        </Menu>
        <Grid>
            <DockPanel>
                <local:Viewport x:Name="viewport" Height="591" Width="680">
                    <local:Viewport.ContextMenu>
                        <ContextMenu>
                            <MenuItem Header="Border Size">
                                <MenuItem Header="None" Click="BorderSizeUpdate" Tag="{x:Static local:BorderSizeOption.None}"/>
                                <MenuItem Header="Normal" Click="BorderSizeUpdate" Tag="{x:Static local:BorderSizeOption.Normal}"/>
                                <MenuItem Header="Full" Click="BorderSizeUpdate" Tag="{x:Static local:BorderSizeOption.Full}"/>
                            </MenuItem>
                            <MenuItem Header="Display Size" />
                            <MenuItem Header="Emulation Speed" />
                        </ContextMenu>
                    </local:Viewport.ContextMenu>
                </local:Viewport>
            </DockPanel>
        </Grid>
    </DockPanel>
</Window>
