<Window x:Class="Devector.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Devector"
        mc:Ignorable="d"
        Title="MainWindow" Height="620" Width="800">
    <Grid>
        <Button x:Name="button" Content="Click me" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click"/>
        <Label x:Name="label" Content="Counter: 0" HorizontalAlignment="Left" Margin="10,40,0,0" VerticalAlignment="Top"/>
        <Canvas x:Name="canvas" Background="White" HorizontalAlignment="Left" Margin="10,80,0,10" VerticalAlignment="Top">
            <Image x:Name="directXImage" Width="512" Height="512"/>
        </Canvas>
    </Grid>
</Window>
