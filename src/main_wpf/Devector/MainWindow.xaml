<Window x:Class="Devector.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Devector"
        mc:Ignorable="d"
        Title="MainWindow" Height="599" Width="556">
    <ScrollViewer VerticalScrollBarVisibility="Visible">
        <Grid>
            <Button x:Name="button" Content="Click me" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click"/>
            <Label x:Name="label" Content="Counter: 0" HorizontalAlignment="Left" Margin="10,40,0,0" VerticalAlignment="Top"/>
            <local:Viewport x:Name="viewport" Width="482" Height="482" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,71,0,0" />
        </Grid>
    </ScrollViewer>
</Window>
